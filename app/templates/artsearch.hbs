<div class="ui secondary pointing menu">
  <a class="item" {{action 'goTo' 'profile'}}>
    Perfil
  </a>
  <a class="item active" {{action 'goTo' 'artsearch'}}>
    Productos
  </a>
  <a class="item" {{action 'goTo' 'order'}}>
    Pedidos
  </a>
  <div class="right menu">
    <a class="ui item" {{action 'signOut'}}>
      	Salir
    </a>
    <a class="ui item">
    	<i class="material-icons prefix"{{action 'goTo' 'shop'}}>shopping_cart</i>
    </a>
  </div>
</div>

<div class="ui segment">
    {{!-- <div class="col s6">
    </div> --}}
  <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s10">
          {{input placeholder="Buscar" type="text" class="validate"}}
        </div>
        <div class="col s2">
          <i class="circular search link icon"></i>
        </div>
      </div>
    </form>
  </div>
  
  <div class="ui inverted segment">
    <div class="ui inverted relaxed horizontal list">
      {{#each model.products as |producto|}}
        <div class="item">
          <div class="content">
            <div class="header">{{producto.name}}</div>
            <div class="row">
              <div class="col s12">
                ${{producto.price}}
                <br><br>
                Stock: {{producto.amount}}
                <br><br>
              </div>
              <div class="col s2">
                <div class="ui vertical animated button" tabindex="0">
                  <div class="hidden content">AÃ±adir</div>
                  <div class="visible content">
                    <i class="shop icon"{{action 'addshop'}}></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

</div>


     
