<div class="ui secondary pointing menu">
  <a class="item" {{action 'goTo' 'profile'}}>
    Perfil
  </a>
  <a class="item" {{action 'goTo' 'artsearch'}}>
    Productos
  </a>
  <a class="item active" {{action 'goTo' 'order'}}>
    Pedidos
  </a>
  <div class="right menu">
    <a class="ui item" {{action 'signOut'}}>
      	Salir
    </a>
    <a class="ui item">
    	<i class="material-icons prefix"{{action 'goTo' 'shop'}}>shopping_cart</i>
    </a>
  </div>
</div>

<div class="ui segment">
  <div class="ui relaxed list">
      {{#each model.tickets as |ticket|}}
        <h4>Ticket: {{ticket.id}}</h4>
        <div class="item">
          <div class="content">
            <div class="row">
              <div class="col s12">
                {{#each ticket.products as |product|}}
                  Producto: {{product.name}}
                  <br>
                  Precio: ${{product.price}}
                  <br><br>
                {{/each}}
              </div>
              <div class="ui clearing divider"></div>
              <div class="col s12">
                <h2 class="ui right floated header">Total: ${{ticket.total}}</h2>
              </div>
              <div class="col s12">
                <div class="row">
                  <button class="negative ui button" {{action 'culminar' ticket}} >Cancelar</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
  </div>
</div>