<div class="ui secondary pointing menu">
  <a class="item " {{action 'goTo' 'info'}}>
    Info. Gral.
  </a>
  <a class="item" {{action 'goTo' 'invent'}}>
    Inventario
  </a>
  <a class="item active" {{action 'goTo' 'pedidos'}}>
    Pedidos Clientes
  </a>
  <a class="item" {{action 'goTo' 'adminacc'}}>
    Administrar Cuentas
  </a>
  <div class="right menu">
    <a class="ui item" {{action 'signOut'}}>
      	Salir
    </a>
  </div>
</div>
<div class="ui inverted segment">
  <div class="ui inverted relaxed list">
    {{#each model as |client|}}
      <h3>{{client.name}} {{client.sname}}</h3>
      <h6>{{client.email}}</h6>

      <div class="ui clearing divider"></div>
      {{#each client.tickets as |ticket|}}
        <h4>Ticket: {{ticket.id}}</h4>
        <div class="item">
          <div class="content">
            <div class="row">
              <div class="col s12">
                {{#each ticket.products as |product|}}
                  Producto: {{product.name}}
                  <br>
                  Precio: ${{product.price}}
                  <br><br>
                {{/each}}
              </div>
              <div class="ui clearing divider"></div>
              <div class="col s12">
                <h2 class="ui right floated header">Total: ${{ticket.total}}</h2>
              </div>
              <div class="col s12">
                <div class="row">
                  <button class="positive ui button" {{action 'culminar' ticket}} >Entregado</button>
                  <button class="negative ui button" {{action 'culminar' ticket}} >Cancelar</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    {{/each}}
  </div>
</div>