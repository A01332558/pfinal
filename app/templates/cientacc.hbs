<div class="ui secondary pointing menu">
  <a class="item " {{action 'goTo' 'info'}}>
    Info. Gral.
  </a>
  <a class="item" {{action 'goTo' 'invent'}}>
    Inventario
  </a>
  <a class="item" {{action 'goTo' 'pedidos'}}>
    Pedidos Clientes
  </a>
  <a class="item active" {{action 'goTo' 'adminacc'}}>
    Administrar Cuentas
  </a>
  <div class="right menu">
    <a class="ui item" {{action 'signOut'}}>
      	Salir
    </a>
  </div>
</div>
<div class="ui segment">
  <div class="ui horizontal list">
    {{#each model as |client|}}
      <div class="item">
        <div class="row">
          <form class="col s12">
            <div class="row">
              <div class="col s2">
                <img class="ui avatar image">
                <div class="content">
                  <a class="header">{{client.name}} {{client.sname}}</a>
                  <div class="description">
                    Correo:
                    <a>
                      <b>
                        {{client.email}}
                      </b>
                    </a>
                  </div>
                </div>
              </div>
              <div class="col s2">
                <button class="negative ui button" {{action 'destroyClient' client}}>Eliminar</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    {{/each}}
  </div>
</div>